<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="20260105120000-1" author="claude">
        <addColumn tableName="tb_email_search_config">
            <column name="oauth2_enabled" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="oauth2_access_token" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="oauth2_refresh_token" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="oauth2_token_expiry" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
