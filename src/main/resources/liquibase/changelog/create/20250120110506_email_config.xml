<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="20250120110506-1" author="marco.gomes">
        <createTable tableName="tb_email_config">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="PROVIDER" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="IMAP_HOST" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="IMAP_PORT" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="SMTP_HOST" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="SMTP_PORT" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="AUTH" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="STARTTLS_ENABLE" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
